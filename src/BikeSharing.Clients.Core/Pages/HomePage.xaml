    <Grid.BackgroundColor>
      <OnPlatform
          x:TypeArguments="Color"
          WinPhone="{StaticResource BackgroundGrayColor}"/>
    </Grid.BackgroundColor>
    <ScrollView
        x:Name="mainScrollView">
      <StackLayout
          Orientation="Vertical">
        <Grid>
          <ffimageloading:CachedImage Aspect="AspectFill">
