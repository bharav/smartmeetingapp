            </RowDefinition>
            <!--<RowDefinition Height="30" />-->
            <RowDefinition Height="40" />
            <RowDefinition>
              <RowDefinition.Height>
                <helpers:OnCustomPlatform
                    x:TypeArguments="GridLength"
                    iOS="150"
                    Android="180"
                    WinPhone="150"
                    Windows="220"/>
