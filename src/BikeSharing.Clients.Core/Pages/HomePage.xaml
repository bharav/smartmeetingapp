	                YBindingPath="Percentage">

                  <!--Data Label-->

                  <chart:DoughnutSeries.DataMarker>

                    <chart:ChartDataMarker LabelContent="Percentage"/>

                  </chart:DoughnutSeries.DataMarker>



                </chart:DoughnutSeries>


              </chart:SfChart.Series>

            </chart:SfChart>
          </StackLayout>

